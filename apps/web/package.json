{
  "name": "@8fold/web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3006",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit -p tsconfig.typecheck.json",
    "audit:e2e:install": "playwright install --with-deps",
    "audit:e2e:local": "AUDIT_BASE_URL=http://localhost:3006 AUDIT_ENV=local playwright test --config=playwright.config.ts --project=default --workers=1",
    "audit:e2e:prod": "AUDIT_BASE_URL=https://8fold.app AUDIT_ENV=production playwright test --config=playwright.config.ts --project=default --workers=1 --retries=0",
    "test:prod:manual-otp": "AUDIT_ENV=production playwright test --config=playwright.config.ts --project=production-manual-otp --workers=1 --retries=0",
    "test:prod": "AUDIT_ENV=production playwright test --project=production-test-mode"
  },
  "dependencies": {
    "@8fold/shared": "workspace:*",
    "@clerk/nextjs": "^6.37.4",
    "@stripe/react-stripe-js": "^3.6.0",
    "@stripe/stripe-js": "^5.6.0",
    "next": "^15.5.11",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/node": "^22.13.1",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "autoprefixer": "^10.4.16",
    "eslint": "^8",
    "eslint-config-next": "15.5.11",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.0",
    "typescript": "^5"
  }
}