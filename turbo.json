{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [
    "API_ORIGIN",
    "ADMIN_ORIGIN",
    "BLOB_READ_WRITE_TOKEN",
    "CLERK_SECRET_KEY",
    "CLERK_ISSUER",
    "DATABASE_URL",
    "NEXT_PUBLIC_API_URL",
    "NEXT_PUBLIC_WEB_ORIGIN",
    "WEB_ORIGIN",
    "NOMINATIM_USER_AGENT",
    "OPEN_AI_API_KEY",
    "INTERNAL_DEBUG_SECRET",
    "STRIPE_MODE",
    "STRIPE_SECRET_KEY",
    "STRIPE_PUBLISHABLE_KEY",
    "STRIPE_WEBHOOK_SECRET",
    "STRIPE_CONNECT_WEBHOOK_SECRET",
    "NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY",
    "NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY"
  ],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"],
      "env": [
        "API_ORIGIN",
        "ADMIN_ORIGIN",
        "BLOB_READ_WRITE_TOKEN",
        "CLERK_SECRET_KEY",
        "CLERK_ISSUER",
        "DATABASE_URL",
        "NEXT_PUBLIC_API_URL",
        "NEXT_PUBLIC_WEB_ORIGIN",
        "WEB_ORIGIN",
        "NOMINATIM_USER_AGENT",
        "OPEN_AI_API_KEY",
        "INTERNAL_DEBUG_SECRET",
        "STRIPE_MODE",
        "STRIPE_SECRET_KEY",
        "STRIPE_PUBLISHABLE_KEY",
        "STRIPE_WEBHOOK_SECRET",
        "STRIPE_CONNECT_WEBHOOK_SECRET",
        "NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY",
        "NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "test": {
      "dependsOn": ["^test"]
    }
  }
}

